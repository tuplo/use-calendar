{
	"name": "@tuplo/use-calendar",
	"description": "Headless calendar hook for React",
	"version": "0.0.0-development",
	"repository": "git@github.com:tuplo/use-calendar.git",
	"author": "Rui Costa",
	"license": "MIT",
	"keywords": [
		"react",
		"react hooks",
		"calendar",
		"headless ui",
		"WAI-ARIA"
	],
	"types": "dist/index.d.ts",
	"module": "./dist/index.mjs",
	"main": "./dist/index.cjs",
	"exports": {
		".": [
			{
				"import": "./dist/index.mjs",
				"require": "./dist/index.cjs",
				"default": "./dist/index.mjs"
			},
			"./dist/index.mjs"
		]
	},
	"files": [
		"dist/use-calendar.d.ts",
		"dist/index.cjs",
		"dist/index.d.ts",
		"dist/index.mjs"
	],
	"scripts": {
		"build": "tsx sh/build.ts",
		"coverage": "tsx sh/coverage.ts",
		"format": "prettier --write src sh",
		"lint:ts": "tsc --noEmit",
		"lint": "eslint src --ext ts,tsx",
		"test:ci": "TZ=utc vitest run",
		"test": "TZ=utc vitest --watch"
	},
	"peerDependencies": {
		"react": "^16.8.6 || ^17.0.0 || ^18.0.0"
	},
	"devDependencies": {
		"@testing-library/dom": "8.20.0",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/react": "13.4.0",
		"@testing-library/user-event": "14.4.3",
		"@types/jest": "29.2.6",
		"@typescript-eslint/eslint-plugin": "5.49.0",
		"@typescript-eslint/parser": "5.49.0",
		"@vitejs/plugin-react": "3.0.1",
		"esbuild": "0.17.4",
		"eslint": "8.32.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-testing-library": "5.10.0",
		"jsdom": "21.1.0",
		"nyc": "15.1.0",
		"prettier": "2.8.3",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tsx": "3.12.2",
		"typescript": "4.9.4",
		"vitest": "0.28.1",
		"zx": "7.1.1"
	}
}
